<main class='main-content bgc-grey-100' id="MyIssuesPreview">
    <div id='mainContent'>
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-12">

                    {# Main headers #}
                    <div class="bgc-white bd bdrs-3 p-10 mB-20">
                        <h4 class="c-grey-900 mB-20 text-center">{{ issueCardDto.getIssue().getName() }}</h4>
                        <h5 class="text-center" style="font-size: 16px;">{{ issueCardDto.getIssue().getInformation() }}</h5>
                    </div>

                    {# Contact #}
                    <div class="bgc-white bd bdrs-3 p-10 mB-20">

                        <section class="p-20">

                            <h5 class="text-center" style="font-size: 16px;"> {{ translate('issues.card.preview.headers.contacts') }} </h5>

                            {% if issueCardDto.getIssueContactsByIcon() is not empty %}

                                <table id="MyIssueContact" class="table table-striped table-bordered" cellspacing="0"
                                       data-table="true" width="100%">
                                    <thead> {# todo: labels #}
                                    <tr>
                                        <td class="d-none">id</td>
                                        <td></td>
                                        <td>Icon</td>
                                        <td>Date</td>
                                        <td>Information</td>
                                        <td>Actions</td>
                                    </tr>
                                    </thead>
                                    <tbody>

                                    {% for issueContact in issueCardDto.getIssue().getIssueContact() %}
                                        <tr class="trash-parent editable-parent save-parent" data-type="MyIssueContact">

                                            <td class="d-none id">{{ issueContact.getId() }}</td>
                                            <td class="icon-preview" data-order="{# todo #}"><i class="{{ issueContact.getIcon() }}" style="margin-left:6px;"></i></td>
                                            <td class="icon" data-order="{# todo #}">{{ issueContact.getIcon() }}</td>
                                            <td class="date" data-order="{# todo #}">
{#                                                {% include 'page-elements/components/forms/input-standard-value.twig' with {#}
{#                                                    type     : "number",#}
{#                                                    value    : holidays_spent.daysSpent,#}
{#                                                    disabled : true,#}
{#                                                    min      : 1,#}
{#                                                    max      : holidays_spent.daysSpent + days_left,#}
{#                                                    attrs    : "data-validate-form-element=true"#}
{#                                                }%}#}
                                            </td>
                                            <td class="information">{{ issueContact.getInformation() }}</td>

                                            {% include 'modules/common/components/table-cells/actions.html.twig' with {
                                                "trash": true,
                                                "edit": true,
                                                "save": true
                                            } %}

                                        </tr>
                                    {% endfor %}

                                    </tbody>
                                </table>

                            {% endif %}
                        </section>
                    </div>

                    {# Progress #}
                    <div class="bgc-white bd bdrs-3 p-10 mB-20">
                        <section class="p-20">

                            <h5 class="text-center" style="font-size: 16px;"> {{ translate('issues.card.preview.headers.progress') }} </h5>

                            <div id="accordion">
                                {% for issueProgress in issueCardDto.getIssue().getIssueProgress() %}
                                    <div class="accordin-section">
                                        <h3 class="c-grey-900 mB-10">{{ issueProgress.getDate() | date("Y-m-d H:i:s") }}</h3>
                                        <section class="justify-content-around">
                                            <p>
                                                {{ issueProgress.getInformation() }}
                                            </p>
                                        </section>
                                    </div>
                                {% endfor %}
                            </div>
                        </section>
                    </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
</main>