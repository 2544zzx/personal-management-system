{# This widget is uset in upload based modules - removes the entire folder with all subdirectories and files inside of them #}
{% set grayed   = '' %}
{% set disabled = '' %}

{% if files_count_in_tree > 0 %}
    {% set disabled = 'disabled' %}
    {% set grayed = 'color:rgba(0,0,0,0.35); ' %}
{% endif %}


<div class="widget-remove-folder {{ disabled }} far fa-minus-square"
     data-folder-path-in-upload-dir="{{ folder_path }}"
     data-upload-module-dir="{{ upload_module_dir }}"
     style="width: 25px; height: 25px; z-index:500; {{ grayed }}">
</div>