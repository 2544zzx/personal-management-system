{# Files #}
{% set imagesUploadFolderSubdirectories = getUploadFolderSubdirectories('images') %}
{% set filesUploadFolderSubdirectories  = getUploadFolderSubdirectories('files') %}

<li class="nav-item dropdown {{ keepMenuOpen(currUrl, '', 'my-notes') }}">

    <a class="sidebar-link" href="javascript:void(0);">
                <span class="icon-holder" style="color:rgb(255,215,0);">
                    <i class="fas fa-folder-open"></i>
                </span>
        <span class="title">My Files</span>
        <span class="arrow">
                    <i class="ti-angle-right"></i>
                  </span>
    </a>

    <ul class="dropdown-menu">

        {% for subdirectory in filesUploadFolderSubdirectories %}
            <li>
                <a class="sidebar-link" href="{{ path('modules_my_files', {'subdirectory': subdirectory}) }}">
                    {{ subdirectory }}
                </a>
            </li>
        {% endfor %}

        <li>
            <a class="sidebar-link" href="{{ path('modules_my_files') }}">
                Main folder
            </a>
        </li>
    </ul>
</li>

