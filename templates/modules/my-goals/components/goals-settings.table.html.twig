<div>

    <table id="MyGoals" class="table table-hover" cellspacing="0" width="100%" data-table="true">
        <thead>
        <tr>
            <td class="id d-none"> #</td>
            <td class="name"> Name</td>
            <td class="description"> Description</td>
            <td class="displayOnDashboard">Display on Dashboard</td>
            <td>Actions</td>
        </tr>
        </thead>
        <tbody>

        {% for goal in all_goals %}
            {% if goal.displayOnDashboard %}
                {% set checked = 'checked' %}
            {% else %}
                {% set checked = '' %}
            {% endif %}

            <tr class="trash-parent monthly-single-data editable-parent save-parent" data-type="MyGoals">

                <td class="id d-none">
                    {{ goal.id }}
                </td>

                <td class="name">
                    {{ goal.name }}
                </td>

                <td class="description">
                    {{ goal.description }}
                </td>

                <td class="">
                    <input type="checkbox" class="disabled displayOnDashboard checkbox-disabled" {{ checked }}/>
                </td>

                <td contenteditable="false">
                    <i class="fa fa-trash" aria-hidden="true"></i>
                    <i class="far fa-edit"></i>
                    <i class="far fa-save d-none"></i>
                </td>
            </tr>

        {% endfor %}

        </tbody>
    </table>


</div>