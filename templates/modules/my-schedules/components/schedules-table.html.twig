{# Info: setting styles #}
{% set in_2_months      = ' table-success' %}
{% set in_1_months      = ' table-warning' %}
{% set in_2_weeks       = ' table-danger'  %}
{% set common_style     = "" %}
{% set font_style       = " font-weight:bold;" %}

{# Info: setting local vars #}
{% set curr_date        =  "now"|date("m/d/Y") %}

<table id="MySchedules" class="table table-striped table-bordered" cellspacing="0" data-table="true" width="100%">
    <thead>
    <tr>
        <td class="d-none">{{ translate('datatables.table.idHash') }}</td>
        <td>{{ translate('schedules.table.name') }}</td>
        <td>{{ translate('schedules.table.date') }}</td>
        <td>{{ translate('schedules.table.information') }}</td>
        <td>{{ translate('schedules.table.scheduleType') }}</td>
        <td>{{ translate('datatables.table.actions') }}</td>
    </tr>
    </thead>
    <tbody>
    {#todo: maybe calc the styles etc in backend or store them in DB ?#}
    {% for schedule in schedules %}

        {% set schedule_timestamp = date( schedule.date | date('m/d/yyyy') ).timestamp %}
        {% set table_style        = '' %}

        {% if schedule.date is not empty %}
            {% set dates_difference = date(curr_date).diff(date(schedule.date)) %}

            {% if dates_difference.days > 30 and dates_difference.days < 60 %}
                {% set table_style = in_2_months %}
                {% set common_style     = font_style %}
            {% elseif dates_difference.days > 14 and dates_difference.days < 30 %}
                {% set table_style = in_1_months %}
                {% set common_style     = font_style %}
            {% elseif dates_difference.days < 14 %}
                {% set table_style = in_2_weeks %}
                {% set common_style     = font_style %}
            {% else %}
                {% set table_style = '' %}
            {% endif %}
        {% endif %}

        <tr class="trash-parent car-single-data editable-parent save-parent {{ table_style }}" data-type="MySchedules">

            <td class="id d-none">{{ schedule.id }}</td>
            <td class="name" style="{{ common_style }}">{{ schedule.name }}</td>

            <td data-order="{{ schedule_timestamp }}"
            >
                <span class="date">
                    {% if schedule.isDateBased() %}
                        {% include 'page-elements/components/forms/input-datepicker.twig' with {
                            "value"     : schedule.date|date("Y-m-d"),
                            "disabled"  : true
                        } %}
                    {% endif %}
                </span>
            </td>

            <td class="id">{{ schedule.information }}</td>

            <td class="parent-td">

                <select class="form-control disabled type option-picker">
                    <option value=""></option>
                    {% for schedule_type in schedules_types %}
                        <option value="{{ schedule_type.id }}"
                                {% if  schedule.scheduleType is not null and schedule_type.id == schedule.scheduleType.id %}selected{% endif %}
                        >
                            {{ schedule_type.name | capitalize }}
                        </option>
                    {% endfor %}
                </select>
            </td>

            {% include 'modules/common/components/table-cells/actions.html.twig' with {
                "trash": true,
                "edit": true,
                "save": true
            } %}

        </tr>
    {% endfor %}
    </tbody>
</table>

