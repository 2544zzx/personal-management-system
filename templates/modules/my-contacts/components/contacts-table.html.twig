<table id="MyContacts" class="table table-striped table-bordered" cellspacing="0" data-table="true" width="100%">
    <thead>
    <tr>
        <td class="d-none">Id</td>
        <td>Contact</td>
        <td>Description</td>
        <td class="d-none">Type</td>
        <td class="">Group</td>
        <td>Actions</td>
    </tr>
    </thead>
    <tbody>
    {% for contact in contacts %}
        <tr class="trash-parent car-single-data editable-parent save-parent"
            data-type="MyContacts{{ type | capitalize }}">
            <td class="d-none id">{{ contact.id }}</td>
            <td class="contact"> {{ contact.contact }}</td>
            <td class="description"> {{ contact.description }}</td>
            <td class="type d-none"> {{ type }}</td>

            <td class="parent-td">

                <select class="form-control disabled group option-picker">
                    <option value=""></option>
                    {% for group in groups %}
                        <option value="{{ group.id }}"
                                {% if contact.group is not null and group.id  == contact.group.id %}selected{% endif %}>
                            {{ group.name | capitalize }}
                        </option>
                    {% endfor %}
                </select>
            </td>


            <td contenteditable="false">
                <i class="fa fa-trash" aria-hidden="true"></i>
                <i class="far fa-edit"></i>
                <i class="far fa-save d-none"></i>
            </td>
        </tr>
    {% endfor %}
    </tbody>
</table>
