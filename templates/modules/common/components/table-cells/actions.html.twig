<td
        contenteditable="false"
        data-content-editable="false"
        {% if tableClasses is defined %}
        class="{{ tableClasses }}"
        {% endif %}
>

    {% if trash is defined and trash %}
    <span
        class="remove-record"
        aria-hidden="true"
        data-content-editable="false"
    {% if trash_attr is defined and trash_attr is not empty %}
        {{ trash_attr }}
    {% endif %}
    >
        <i class="fa fa-trash"></i>
    </span>

    {% endif %}

    {% if edit is defined and edit %}
    <span
        class="edit-record"
        data-content-editable="false"
        {% if edit_attr is defined and edit_attr is not empty %}
                {{ edit_attr }}
        {% endif %}
    >
        <i class="far fa-edit"></i>
    </span>
    {% endif %}

     {% if copy is defined and copy %}
     <span
        class="copy-record"
        {% if copy_attr is defined and copy_attr is not empty %}
                {{ copy_attr }}
        {% endif %}
     >
        <i class="far far fa-copy"></i>
     </span>
    {% endif %}

    {% if save is defined and save %}
    <span
        class="save-record d-none"
        data-content-editable="false"
        {% if save_attr is defined and save_attr is not empty %}
                {{ save_attr }}
        {% endif %}
    >
        <i class="far fa-save"></i>
    </span>
    {% endif %}

    {% if fontawesome is defined and fontawesome %}
    <span
        class="action-fontawesome d-none"
        data-content-editable="false"
        {% if fontawesome_attr is defined and fontawesome_attr is not empty %}
                {{ fontawesome_attr }}
        {% endif %}
    >
        <i class="far fa-smile"></i>
    </span>
    {% endif %}

    {% if lock_record is defined and lock_record %}
    <span
        class="action-lock-record {{ getClassForLockedResource(lock_record, lock_type, lock_target) }}"
        data-content-editable="false"
        data-lock-resource-record     ="{{ lock_record }}"
        data-lock-resource-type       ="{{ lock_type }}"
        data-lock-resource-target     ="{{ lock_target }}"
        {% if lock_record_attr is defined and lock_record_attr is not empty %}
                {{ lock_record_attr }}
        {% endif %}
    >
        <i class="fas fa-lock"></i>
    </span>
    {% endif %}
</td>