<table id="MyPaymentsIncome" class="table table-striped table-bordered" cellspacing="0"
       data-table="true" width="100%">
    <thead>
    <tr>
        <td class="d-none">{{ translate('datatables.table.id') }}</td>
        <td>{{ translate('payments.incomes.table.amount') }}</td>
        <td>{{ translate('payments.incomes.table.information') }}</td>
        <td>{{ translate('payments.incomes.table.date') }}</td>
        <td>{{ translate('payments.incomes.table.currency') }}</td>
        <td>{{ translate('datatables.table.actions') }}</td>
    </tr>
    </thead>
    <tbody>

    {% for record in records %}
        <tr class="trash-parent editable-parent save-parent" data-type="MyPaymentsIncome">

            <td class="d-none id">    {{ record.id }}         </td>
            <td class="amount">       {{ record.amount }}     </td>
            <td class="information">  {{ record.information}} </td>
            <td class="">
                    <span class="date">
                        {% include 'page-elements/components/forms/input-datepicker.twig' with {
                            "value"     : ( record.date is not null ? record.date | date('Y-m-d') : "") ,
                            "disabled"  : true
                        } %}
                    </span>
            </td>

            <td class="">
                <div class="currency">
                    {% include 'page-elements/components/forms/currency-select.twig' with {
                        "disabled": true,
                        "currency": record.currency
                    }%}
                </div>
            </td>

            {% include 'modules/common/components/table-cells/actions.html.twig' with {
                "trash": true,
                "edit": true,
                "save": true
            } %}

        </tr>
    {% endfor %}

    </tbody>
</table>