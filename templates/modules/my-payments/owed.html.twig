{% extends getBaseTemplate(ajax_render) %}
{% block body %}
    <!-- ### $App Screen Content ### -->
    <main class='main-content bgc-grey-100' id="MyPaymentsOwedModuleBody">
        <div id='mainContent'>
            <div class="container-fluid">
                {# Owed by others #}
                <div class="row">
                    <div class="col-md-12">
                        <div class="bgc-white bd bdrs-3 p-20 mB-20">
                            <h4 class="c-grey-900 mB-20 text-center">Money owed by others</h4>
                            {% include 'modules/my-payments/components/owed.table.html.twig' with {
                                'records'   : owed_by_others,
                                'summarries': summary_owed_by_others
                            } %}
                        </div>
                    </div>
                </div>
                {# Owed by me #}
                <div class="row">
                    <div class="col-md-12">
                        <div class="bgc-white bd bdrs-3 p-20 mB-20">
                            <h4 class="c-grey-900 mB-20 text-center">Money owed by me</h4>
                            {% include 'modules/my-payments/components/owed.table.html.twig' with {
                                'records'   : owed_by_me,
                                'summarries': summary_owed_by_me
                            } %}
                        </div>
                    </div>
                </div>
                {# Form #}
                <div class="row">
                    <div class="col-md-12">
                        <div class="bgc-white bd bdrs-3 p-20 mB-20 d-flex flex-column">
                            <h4 class="c-grey-900 mB-20 align-self-center">Add record</h4>
                            <div class="col-md-6 align-self-center add-record-form">
                                {{ form_start(form,{'attr':{' data-entity':"MyPaymentsOwed"}}) }}
                                {{ form_end(form) }}
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </main>

{% endblock body %}
