{% if ajax_render == false %}
    {% set template= "base.html.twig" %}
{% else %}
    {% set template= "blank.html.twig" %}
{% endif %}

    {% extends template %}

{% block body %}


    <!-- ### $App Screen Content ### -->
    <main class='main-content bgc-grey-100'>
        <div id='mainContent'>

            <div class="container-fluid">
                <div class="row">
                    <div class="col-md-12">
                        <div class="bdrs-3 p-20 mB-20 d-flex flex-wrap justify-content-around">

                            {# Todo: add contact in form of widget button? #}
                            {# Move styles #}
                            <style>
                                .contact-card-actions {
                                    display: flex;
                                    flex-direction: column;
                                    position: absolute;
                                    right: -22px;
                                    top: -7px;
                                    font-size: 24px;
                                }

                                .contact-card-actions .action i {
                                    cursor: pointer;
                                }
                            </style>

                            {% for contact in contacts %}
                                <div class="" style="min-width: 350px; padding-top:20px; padding-left:10px; margin-top:30px">
                                    <div class="">
                                        <div class="layers">
                                            {% include('modules/my-contacts-2/components/contact-card.html.twig') %}
                                        </div>
                                    </div>
                                </div>
                            {% endfor %}

                        </div>
                    </div>
                </div>
            </div>

            <div class="widgets-wrapper">
                {% include 'page-elements/components/widgets/plus-icon.twig' with {
                    'widgetName': "add-contact-card-widget",
                    'settings':{
                        "type": 'template',
                        "url": path('dialog_body_create_contact_card'),
                        'callFunctions': '
                            events.general.attachFormViewAppendEvent();
                        ',
                        'subtype':'contactCardCreation'
                    }
                } %}
                {# todo: special js that will handle creating inputs for dto? As i can fill few types at once here #}
            </div>

        </div>
    </main>

{% endblock body %}
